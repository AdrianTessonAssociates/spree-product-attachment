<hr style="width:50%"/>

<% unless @product.downloadables.blank? %>
  <h2><%= t('downloads') %></h2>

  <ul> <% @product.downloadables.each do |downloadable| %>
    <% if downloadable.enabled %>
      <li>
      <% extension_name = File.extname(downloadable.attachment_file_name) -%>
      <% extension_name.slice!(0) -%>
      <% extension_name.downcase! -%>
      <%= link_to(image_tag("attachment_extension/icons/#{extension_name}.gif")+" #{downloadable.filename}", downloadable.attachment.url(:product)) %>
      (<%= number_to_human_size(downloadable.attachment_file_size) %>)
      </li>
    <% end %>
  <% end -%></ul>
<% end -%>
